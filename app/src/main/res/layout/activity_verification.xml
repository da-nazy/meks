<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.verification"
    android:fillViewport="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/back_veri"
        android:padding="5dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:src="@mipmap/email_icon" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify your email"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingLeft="50dp"
            android:layout_marginTop="35dp"
            android:fontFamily="sans-serif-medium"
            />
        <TextView
            android:id="@+id/yourEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter the 4 digit pin sent\n to yourmail@example.com"
            android:textColor="#232222"
            android:textSize="20sp"
            android:layout_marginTop="35dp"
            android:paddingLeft="50dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            />
        <EditText
            android:id="@+id/fourdigitcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#7210FF"
            />

        <Button
            android:id="@+id/verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:background="@mipmap/but_veri"
            android:text="Confirm"
            android:textSize="25sp"
            android:textColor="#fff"
            android:textStyle="bold"
            />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>