<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@mipmap/vf_back_cover"
    >


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="350dp"
        android:background="@mipmap/vf_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
      <ImageView
          android:layout_marginTop="15dp"
            android:layout_gravity="center"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:background="@mipmap/good_veri"
          />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verified"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold"
             android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You have successfully verified your account"
            android:textColor="#232222"
            android:textSize="20sp"
            android:letterSpacing="2sp"
            android:layout_marginTop="16dp"
           android:textAlignment="center"
           android:padding="10dp"
            android:gravity="center_horizontal" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/but_veri"
            android:textColor="#fff"
            android:text="Goto Menu"
            android:textSize="18sp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>